---
import "../styles/global.css";
import "../styles/role-select.css";

const roles = [
  { name: "Top", icon: "/icons/top_icon.PNG", classStr: "relative block w-[150px] top-[220px] left-[50px] lg:top-[130px] lg:left-[0px]" },
  { name: "JG", icon: "/icons/jg_icon.PNG", classStr: "relative block w-[150px] top-[190px] left-[140px] lg:top-[100px] lg:left-[70px]" },
  { name: "Mid", icon: "/icons/mid_icon.PNG", classStr: "relative block w-[150px] top-[40px] left-[300px] lg:top-[5px] lg:left-[170px]" },
  { name: "Bot", icon: "/icons/bot_icon.PNG", classStr: "relative block w-[150px] top-[150px] left-[450px] lg:top-[80px] lg:left-[260px]" },
  { name: "Sup", icon: "/icons/sup_icon.PNG", classStr: "relative block w-[150px] top-[10px] left-[610px] lg:top-[-10px] lg:left-[360px]" },
];
---

<html>
	<head>
		<meta charset="UTF-8" />
	</head>
	<body class="lg:flex justify-center p-10">
		<div class="min-h-screen text-center pt-10 pb-10">
			<div class="">
				<h1 class="text-3xl font-bold underline">LoL チャンピオン相性辞書</h1>
				<p class="mb-6 text-lg">
				<a href="https://nitamago.github.io/lol-matchup-quiz/" class="text-blue-600 underline ml-1">マッチアップクイズ</a>の解説をまとめたものです。<br />
				チャンピオンの有利不利、カウンター、立ち回りを調べるのにご利用ください。
				</p>
				<div class="bg-center bg-cover min-h-[900px] lg:min-h-[540px]" style="background-image: url('/icons/map_fix.PNG');">	
					<div class="roles">
					{roles.map(role => (
						<a href={`/${role.name.toLowerCase()}`} class={role.classStr}>
						<img src={role.icon} alt={role.name} class="relative w-[150px] lg:w-[100px] rounded-[50%]"/>
						</a>
					))}
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
